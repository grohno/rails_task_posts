<%= render 'header' %>
      <h2>この内容でつぶやく？</h2>
      <%= form_with(model: @post, url: posts_path, local: true) do |form| %>
        <%= form.hidden_field :content %>
        <div class="post_content">
          <p>本文:<%= @post.content %></p>
        </div>
        <%= form.submit  "つぶやく" %>
        <%= form.submit "戻る", name: 'back' %>
      <% end %>
<%= render 'footer' %>
